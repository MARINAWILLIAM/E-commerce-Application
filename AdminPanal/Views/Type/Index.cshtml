@model IReadOnlyList<ProductTypeTable>
@{
    ViewData["Title"] = "Index";
}
<h1>All Types</h1>
<partial name="CreateForm" model="new ProductTypeTable()" />
@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
              
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                   
                    <td>@item.Name</td>
                    <td>
                        <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="fas fa-trash"></i> Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-3 p-3 alert-warning">
        <h2>There is No Types!</h2>
    </div>
}
@section Scripts
    {
    <partial name="_ValidationScriptsPartial" />
}




